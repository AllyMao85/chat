#container
	width 100%
	position relative
	height 800px
	#config
		position absolute
		width 15%
		height 100%
		padding 0.5%
		.configArea
			margin-bottom 50px
			.configSpan
				position relative
				margin-bottom 20px
				.configSelect
					position absolute
					left 75px
					select
						width 110px
		.shortCut .configSelect
			padding 4px 6px
			font-size 11.844px
			font-weight bold
			line-height 14px
			color #FFF
			text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25)
			background-color #999
			border-radius 3px
			display inline-block
	#editor-wrap
		position absolute
		left 16%
		top 0
		width 48%
		height 700px
		#editor
			width 100%
			height 100%
			.inLoading
				position absolute
				left 40%
				top 40%
				width 200px
				height 20px
    #ioArea
		position absolute
		right 20px
		top 0
		width 34%
		#inputArea
			.titleArea h3
				margin-top 2px
			textarea
				width 96%
				height 250px
				border-radius 5px
				border-color #AFAFAF #9F9F9F #9F9F9F #AFAFAF
				border-width 1px
				line-height 15px
				padding .5em
				background #FFF
		#runArea
			margin-top 10px
			position relative
			height 40px
			#btn_share
				float right
			#btn_click
				float left
		#outputArea
			pre
				margin-top 5px
				padding 2%
				height 290px
				border-radius 10px
			code
				color green
				font-size 15px
