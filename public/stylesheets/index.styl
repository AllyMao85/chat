#container
	width 100%
	#config
		position absolute
		width 13%
		height 100%
		padding 1%
	#editor-wrap
		position absolute
		left 15%
		top 0
		width: 45%
		#editor
			width 100%
			height 700px
    #ioArea
		position absolute
		right 20px
		top 10px
		width 35%
		#inputArea
			textarea
				width 96%
				height 250px
				border-radius 5px
				border-color #AFAFAF #9F9F9F #9F9F9F #AFAFAF
				border-width 1px
				line-height 15px
				padding .5em
				background #FFF
				
		#runArea
			position relative
			#btn_click
				background-color #333333
				border 1px solid #000000 !important
				border-radius 3px 3px 3px 3px
				box-shadow 0 2px 1px rgba(0, 0, 0, 0.3), 0 1px 0 rgba(255, 255, 255, 0.4) inset
				color #FFF
				cursor pointer
				font-size 14px
				padding 0.4em 0.8em
				position absolute
				right 0
				top 5px
		#outputArea
			pre
				margin-top 5px
				padding 2%
				height 290px
				border-radius 10px
			code
				color green
				font-size 15px
