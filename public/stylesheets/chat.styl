#chat_tip
	position fixed
	cursor pointer
	background-image url("/images/panelbg.png")
	background-repeat repeat-x
	border-top 1px solid #CED1CE
	bottom 0
	color #FFFFFF
	height 50px
	left 0
	line-height 32px
	font-size 17px
	right 0
	text-shadow 1px 1px 0 #000000
	width 100%
	z-index 999
	h3
		text-align center
		margin 0
		cursor pointer
		color #FFFFFF
		line-height 32px
		font-size 17px
		text-shadow 1px 1px 0 #000000
#chat_main
	position fixed
	bottom 15px
	z-index 999
	width 450px
	height 450px
	padding 15px
	background #000
	color #FFF
	border-radius 5px
	border 1px solid #CCC
	#chat_close
		position absolute
		right 2px
		top -2px
		font-size 20px
		cursor pointer
	#chat_content
		overflow auto
		height 400px
	#chat_send
		position absolute
		bottom 8px;
		#chat_status
			display block
		#send_area
			width 440px
			padding 5px
			font-size 15px
